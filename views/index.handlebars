<!--Header Div-->
<div class = "landing-header">
    <!--logo and sign in button-->
    <div class="container">
        <div class="row">
            <div class="col-sm-2"><a class="navbar-brand text-dark"  href="/"><p id="logo">OwnFlix</p></a></div>
            <div class="col-sm-10" id="landing-header-view">
                <div class="row">
                    <div class="col-sm-10"></div>
                    <div class="col-sm-2 buttons"><button type="button" class="btn btn-default hvr-bounce-in" id="sign-in">Sign In</button></div>
                </div>
            </div>
        </div>
    </div>
</div>

  <!--Main Content Div-->
  <div class="container">

      <div class="row" id="login">
          <div class = "col-sm-12">
              <!--containers get put here-->
              <div id="login-view">
                  <h1>{{title}}</h1>
                  <H1>See What's Next</H1>
                  <H3>Your next movie could be just up the street.</H3>
                  <div class="col-sm-2 buttons"><button type="button" class="btn btn-default" id="new-user">Create New User</button></div>

                <div class="col-sm-12 slideshow">
                    <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                            <img class="d-block w-100" src="img/slide1.jpg" alt="First slide">
                            </div>
                            <div class="carousel-item">
                            <img class="d-block w-100" src="img/slide2.jpg" alt="Second slide">
                            </div>
                            <div class="carousel-item">
                            <img class="d-block w-100" src="img/slide3.jpg" alt="Third slide">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
    
<!-- New User Modal Content -->
<div id='new-user-modal' class='modal'>


    <div class='row' id='modal-content'>
        <div class='col-sm-3'></div>
            <div class='col-sm-6 sign-in-form'>
                <span class="close">&times;</span>
                <h3>Create Account</h3>

                <form id='create-account-form' name='new-user-form' action="/register" method="POST">

                <br><label for="firstName">First Name</label><input name='firstName' type='text' id='firstName'>
                <br>
                <br>
                <label for="lastName">Last Name</label><input name='lastName' type='text' id='lastName'>
                <br>
                <br>
                <label for="email">Email</label><input type='text' id='email' name='email'>
                <br>
                <br>
                <label for="address">Address</label><input type='text' id='address' name='address'>
                <br>
                <br>
                <label for="city">City</label><input type='text' id='city' name='city'>
                <br>
                <br>
                <label for="state">State (XX)</label><input type='text' id='state' name='state'>
                <br>
                <br>
                <label for="zip">Zip Code (XXXXX)</label><input type='text' id='zip' name='zip'>
                <br>
                <br>
                <label for="password">Password</label><input type='password' id='password' name='password'>
                <br>
                <br>
                <input type='submit' id='submit-new-user' href="#" value='Submit'>
                </form>
            </div>
        <div class='col-sm-3'></div>
    </div>
</div>

<!-- Sign In Modal -->
<div id='sign-in-modal' class='modal'>
    <div class='row' id='modal-content'>
        <div class='col-sm-4'></div>
        
        <div class='col-sm-4 sign-in-form'>
            <span class="close">&times;</span>
            <h3>Sign In</h3>
            <br>
            <form id='sign-in-form' action="/login" method="POST">
            <input type='text' id='user-email' placeholder='Email' name="email">
            <br>
            <br>
            <input type='password' id='user-password' placeholder='Password' name="password">
            <br>
            <br>
            <input type='submit' id='submit-sign-in' href='#' value='Submit'>
            </form>
            <br>
            <br>
            <button id='new-user'>New? Sign up Now.</button>
            <div class='col-sm-4'></div>
        </div>
    </div>
</div>

